<div class="page-header">
  <div class="row">
    <div class="col-md-8">
      <h1><%%= t '.title', default: t('global.show.title') %></h1>
    </div>
    <div class="col-md-4">
      <div class="header-actions">
        <%%= link_to icon('chevron-left'), <%= index_helper %>_path, class: 'btn btn-default', data: { toggle: 'tooltip', container: 'body' }, title: t('.back', default: t('global.actions.back')) %>
        <%%= link_to icon('pencil'), edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary', data: { toggle: 'tooltip', placement: 'bottom' }, title: t('.back', default: t('global.actions.edit')) %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <dl class="dl-horizontal">
        <%- attributes.each do |attribute| -%>
          <div class="col-md-4">
            <dt><%= I18n.t "activerecord.attributes.#{singular_table_name}.#{attribute.name}" %>:</dt>
          </div>
          <div class="col-md-8">
            <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>
          </div>
        <%- end -%> 
      </dl>
  </div>
</div>
